<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.jaskirat.pec.applyForm"
    android:background="@drawable/bkg">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Apply For Certificate"
        android:textSize="20dp"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No name"
        android:textSize="20dp"
        android:id="@+id/studentName"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:paddingLeft="15dp"

        android:hint="SID"
        android:id="@+id/sid"
        android:background="@drawable/white"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:paddingLeft="15dp"
        android:hint="Father's Name"
        android:id="@+id/father_name"
        android:background="@drawable/white"/>

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="fill_parent"
        android:id="@+id/branch"
        android:layout_height="30dp"
        android:paddingLeft="15dp"
        android:textSize="20dp"
        android:hint="Branch:"
        />

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="fill_parent"
        android:paddingLeft="15dp"
        android:layout_height="30dp"
        android:prompt="@string/spinner_title1"
        android:background="@drawable/white"/>
    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:paddingLeft="15dp"
android:textSize="20dp"
        android:hint="Year"

       />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="wrap_content"
        android:paddingLeft="15dp"
        android:layout_height="30dp"
        android:prompt="@string/spinner_title"
        android:background="@drawable/white"/>


        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:paddingLeft="15dp"
            android:textSize="20dp"
            android:hint="Activity Year"

            />

        <Spinner
            android:id="@+id/spinner3"
            android:layout_width="wrap_content"
            android:paddingLeft="15dp"
            android:layout_height="30dp"
            android:prompt="@string/spinner_title"
            android:background="@drawable/white"/>


        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:paddingLeft="15dp"
            android:textSize="20dp"
            android:hint="Activity type"

            />

        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="wrap_content"
            android:paddingLeft="15dp"
            android:layout_height="30dp"

            android:prompt="@string/spinner_title"
            android:background="@drawable/white"/>






        <TextView
            android:layout_marginTop="20dp"
            android:id="@+id/institute_Text"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:paddingLeft="15dp"
            android:textSize="20dp"
            android:hint="Institute Type"
            android:visibility="gone"
            />

        <Spinner
            android:id="@+id/spinner4"
            android:layout_width="wrap_content"
            android:paddingLeft="15dp"
            android:layout_height="30dp"
            android:prompt="@string/spinner_title"
            android:background="@drawable/white"
            android:visibility="gone"/>

        <TextView
            android:layout_marginTop="20dp"
            android:id="@+id/audience_Text"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:paddingLeft="15dp"
            android:textSize="20dp"
            android:hint="Audience"
            android:visibility="gone"
            />

        <Spinner
            android:id="@+id/spinner5"
            android:layout_width="wrap_content"
            android:paddingLeft="15dp"
            android:layout_height="30dp"
            android:prompt="@string/spinner_title"
            android:background="@drawable/white"
            android:visibility="gone"/>

<TextView
    android:layout_marginTop="20dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="20dp"
    android:hint="Upload Proof Image"
    android:paddingLeft="15dp"/>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
        <Button
            android:layout_marginTop="10dp"
            android:layout_marginLeft="45dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Choose Image"
            android:textColor="#FFFFFF"
            android:background="@color/colorPrimary"
            android:onClick="loadImagefromGallery"
            android:id="@+id/gallery"/>

        <ImageView
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:id="@+id/camera"
            android:onClick="cameraopen"
            android:src="@drawable/camera"/>

</LinearLayout>

        <ImageView
            android:id="@+id/imgView1"
            android:layout_width="80dp"
            android:layout_height="80dp"
           android:visibility="gone" >
        </ImageView>


        <EditText
            android:paddingLeft="15dp"
            android:paddingTop="40dp"
            android:paddingBottom="40dp"
            android:overScrollMode="always"
            android:scrollbarStyle="insideInset"
            android:scrollbars="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/white"
            android:inputType="textMultiLine"
            android:hint="Description of participation"
            android:id="@+id/description"
            />

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Send For Approval"
            android:textColor="#FFFFFF"
            android:background="@color/colorPrimary"
            android:layout_gravity="center_horizontal"
            android:onClick="submitdata"
            android:id="@+id/submit"/>
    </LinearLayout>
</ScrollView>

</LinearLayout>
