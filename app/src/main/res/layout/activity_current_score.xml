<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.jaskirat.pec.CurrentScore"
    android:background="@drawable/bkg">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
android:textSize="20dp"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:text="Current Score"
        android:paddingTop="5dp"
       android:layout_marginBottom="20dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:paddingLeft="15dp"
        android:background="@drawable/white"
        android:text="1st year : 0"
        android:paddingTop="5dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:paddingLeft="15dp"
        android:background="@drawable/white"
        android:text="2nd year : 0"
        android:paddingTop="5dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:paddingLeft="15dp"
        android:background="@drawable/white"
        android:text="3rd year : 0"
        android:paddingTop="5dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:paddingLeft="15dp"
        android:background="@drawable/white"
        android:text="4th year : 0"
        android:paddingTop="5dp"
        android:layout_marginBottom="20dp"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:paddingLeft="15dp"
        android:background="@drawable/white"
        android:text="            COA       : Not Eligible"
        android:paddingTop="5dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:paddingLeft="15dp"
        android:background="@drawable/white"
        android:text="           COE       : Not Eligible"
        android:paddingTop="5dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:paddingLeft="15dp"
        android:background="@drawable/white"
        android:text="Institute Color : Not Eligible"
        android:paddingTop="5dp"/>

</LinearLayout>
